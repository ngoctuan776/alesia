        </div>
        <div class="item col-md-4 col-12">
          <div class="item_wrap">
            <div class="icon">
               {% if section.settings.icon_img2 != blank %}
              <div class="image-about-us">
                <img class="img-respon" alt="{{ section.settings.about_image.alt | default: shop.name }}" src="{{ section.settings.icon_img2 | img_url: 'master' }}" />
              </div>
              {% else %}
              <div class="image-about-us">
                <img class="img-responsive" alt="{{ shop.name }}" src="//placehold.it/48x48" />
              </div>
              {% endif %}
            </div>
            <h3>{{ section.settings.sv_title2 }}</h3>
            <div class="des">{{ section.settings.des2 }}</div>
          </div>
        </div>
        <div class="item col-md-4 col-12">
          <div class="item_wrap">
            <div class="icon">
               {% if section.settings.icon_img3 != blank %}
              <div class="image-about-us">
                <img class="img-respon" alt="{{ section.settings.about_image.alt | default: shop.name }}" src="{{ section.settings.icon_img3 | img_url: 'master' }}" />
              </div>
              {% else %}
              <div class="image-about-us">
                <img class="img-responsive" alt="{{ shop.name }}" src="//placehold.it/48x48" />
              </div>
              {% endif %}
            </div>
            <h3>{{ section.settings.sv_title3 }}</h3>
            <div class="des">{{ section.settings.des3 }} </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
{% if section.settings.show_team != blank %}
<div class="our-member">
  <div class="container">
    <div class="wrap">
      {% if section.settings.member_title != blank %}
      <div class="title-about-us">
        <h2>{{ section.settings.member_title }}</h2>
      </div>
      {% endif %}

      {% if section.settings.our_text_desc != blank %}
      <div class="dshort-des">
        {{ section.settings.our_text_desc }}
      </div>
      {% endif %}
      <div class="row">
        {% for block in section.blocks %}
        {% case block.type %}
        {% when 'faq' %}   
        <div class="col-xl-3 col-lg-3 col-md-6 col-12">
          <div class="item-inner">
            <div class="w-image-box banners">
              {% if block.settings.our_image_1 != blank %}
              <div class="item-image">
                <a title="Jennifer lawrence" href="{% if block.settings.link_member != blank %}{{ block.settings.link_member }}{% else %}#{% endif %}">
                  <img class="img-respon" alt="{{ block.settings.our_image_1.alt | default: shop.name }}" src="{{ block.settings.our_image_1 | img_url: 'master' }}" />
                </a>
              </div>
              {% else %}
              <img class="img-responsive" alt="{{ shop.name }}" src="//placehold.it/160x160" />
              {% endif %}
            </div>
            <div class="info-member">
              <div class="item-content">
              {% if block.settings.cl_name_1 != blank %}
              <h2 class="cl-name"><a title="{{ block.settings.cl_name_1 }}" href="{% if block.settings.link_member != blank %}{{ block.settings.link_member }}{% else %}#{% endif %}">{{ block.settings.cl_name_1 }}</a></h2>
              {% endif %}
              {% if block.settings.cl_job_1 != blank %}
              <p class="cl-job">{{ section.settings.cl_job_1 }}Tech Leader</p>
              {% endif %}
              </div>
             
            </div>
          </div>
        </div>
        {% endcase %}
        {% endfor %}        
      </div>
    </div>	
  </div>
</div>
{% endif %}

<div class="widget widget-testimonialCarousel">
 <div class="container">
   <div class="widget-content">  
<div class="swiper-container" data-items="1" data-margin="0" data-row="1" data-md="1" data-sm="1" data-xs="1">
  <div class="swiper-wrapper">  
	{% for block in section.blocks %}
  {% case block.type %}
  {% when 'testimonial_item' %}
  <div class="swiper-slide">   
    <div class="testimonial-content text-center" style="background-color:{{ block.settings.bg_color }};">
      {% if block.settings.brc_image != blank %}
      {{ block.settings.brc_image | img_url: '200x200' | img_tag: block.settings.brc_image.alt, 'banner5__image' }}
      {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
      {% if block.settings.des != blank %}
      <p class="dec">{{ block.settings.des }}</p>
      {% endif %}
      {% if block.settings.name != blank %}
      <h4>{{ block.settings.name }}</h4>
      {% endif %}
      {% if block.settings.name2 != blank %}
      <p class="job">{{ block.settings.name2 }}</p>
      {% endif %}
    </div>


  </div>
 
 {% endcase %}
  {% endfor %}
     </div>
</div>
   </div>
</div>
</div>
