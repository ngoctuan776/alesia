<div class="container page-about">
  <div class="row">
    <div class="col-md-12 welcome-about-us">
      <div class="content-about-us">
        {% if section.settings.about_image != blank %}
        <div class="image-about-us">
          <img class="img-respon" alt="{{ section.settings.about_image.alt | default: shop.name }}" src="{{ section.settings.about_image | img_url: 'master' }}" />
        </div>
        {% else %}
        <div class="image-about-us">
          <img class="img-responsive" alt="{{ shop.name }}" src="//placehold.it/1290x585" />
        </div>
        {% endif %}
        <div class="content-about">

          {% if section.settings.about_title != blank %}
          <div class="title-about-us">
            <h2>{{ section.settings.about_title }}</h2>
          </div>
          {% endif %}
          {% if section.settings.about_text_desc != blank %}
          <div class="des-about-us">
            {{ section.settings.about_text_desc }}
          </div>
          {% endif %}
          
           <div class="socials-wraps "> 
            <ul>
              {% if section.settings.social_facebook_link %}
              <li class="facebook"><a class="_blank" href="{{ section.settings.social_facebook_link }}" target="_blank"><i class="fa fa-facebook"></i></a></li>
              {% endif %}
              {% if section.settings.social_twitter_link %}
              <li class="twitter"><a class="_blank" href="{{ section.settings.social_twitter_link }}" target="_blank"><i class="fa fa-twitter"></i></a></li>
              {% endif %}
              {% if section.settings.social_google_link %}
              <li class="google_plus"><a class="_blank" href="{{ section.settings.social_google_link }}" target="_blank"><i class="fa  fa-google-plus"></i></a></li>
              {% endif %}
              {% if section.settings.social_dribbble_link %}
              <li class="dribbble"><a class="_blank" href="{{ section.settings.social_dribbble_link }}" target="_blank"><i class="fa  fa-dribbble"></i></a></li>
              {% endif %}            
              {% if section.settings.social_instagram_link %}
              <li class="instagram"><a class="_blank" href="{{ section.settings.social_instagram_link }}" target="_blank"><i class="fa  fa-instagram"></i></a></li>
              {% endif %}
              {% if section.settings.social_pinterest_link %}
              <li class="pinterest"><a class="_blank" href="{{ section.settings.social_pinterest_link }}" target="_blank"><i class="fa fa-pinterest"></i></a></li>
              {% endif %}
              {% if section.settings.social_linkedin_link %}
              <li class="linkedin"><a class="_blank" href="{{ section.settings.social_linkedin_link }}" target="_blank"><i class="fa fa-linkedin"></i></a></li>
              {% endif %}            
            </ul>
          </div> 
              
        </div>
      </div>
    </div>
  </div>
  <div class="wpb_wrapper">
  </div>  
</div>
{% if section.settings.show_service != blank %}
