<div class="widget widget-promotion {% if section.settings.s1 %}d-xl-block{% else %}d-xl-none{% endif %} {% if section.settings.s2 %}d-md-block{% else %}d-md-none{% endif %} {% if section.settings.s3 %}d-block{% else %}d-none{% endif %}">
  
  <div class="{% if section.settings.fw %}fw{% else %}container{% endif %}">  
    <div class="widget-inner">
      <div class="row no-gutters align-items-center text-center ">
        {% for block in section.blocks %}          
          {% if block.settings.enable %}
          <div class="col-sm col-12">
            <div class="promotion-item" style="background-color:{{ block.settings.bg_color }}; border-color: {{ block.settings.border_color }};">  
              <i class="material-icons" style="color:{{ block.settings.ico_color }};">{{ block.settings.icon_font }}</i>
              <h3 style="color:{{ block.settings.text_color }};">{{ block.settings.title }}</h3>
              <p style="color:{{ block.settings.text_color }};">{{ block.settings.subtitle }}</p>
            </div>
          </div>        
          {% endif %}
        {% endfor %}
      </div>      
    </div>
  </div>

</div>

{% schema %}
  {
    "name": "GRT - Promotion - 1",
    "settings": [
      {
        "type": "checkbox",
        "id": "fw",
        "label": "Full width"
      },
	  {
        "type": "checkbox",
        "id": "s1",
        "label": "Show on Desktop",
		"default": true
      },
	  {
        "type": "checkbox",
        "id": "s2",
        "label": "Show on Tablet",
		"default": true
      },
	  {
        "type": "checkbox",
        "id": "s3",
        "label": "Show on Mobile",
		"default": true
      }
	],
	"blocks": [
        {
        "type": "text",
        "name": "Item",
        "settings": [
          {
            "type": "checkbox",
            "id": "enable",
            "label": "Enable item"
          },
			{
            "type": "text",
            "id": "icon_font",
            "label": "Icon",
            "default": "lock_open",
			"info":"https:\/\material.io\/icons\/"
          },
		  {
            "type": "textarea",
            "id": "title",
            "label": "Title",
            "default": "$5 NEXT DAY DELIVERY!"
          },
          {
            "type": "textarea",
            "id": "subtitle",
            "label": "SubTitle",
            "default": "ENDS 7PM! USE CODE GREDTHEMES"
          },
          {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#000"
          },
			{
            "type": "color",
            "id": "ico_color",
            "label": "ico Color",
            "default": "#fff"
          },
		  {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#fff"
          },
		  {
            "type": "color",
            "id": "border_color",
            "label": "Border Color",
            "default": "#e1e1e1"
          }
		  
        ]
      }
	],
    "presets": [
      {
        "name": "GRT - Promotion - 1",
        "category": "Text"
      }
    ]
  }
{% endschema %}

