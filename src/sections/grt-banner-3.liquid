<div class="widget widget-banner-3 {% if section.settings.s1 %}d-xl-block{% else %}d-xl-none{% endif %} {% if section.settings.s2 %}d-md-block{% else %}d-md-none{% endif %} {% if section.settings.s3 %}d-block{% else %}d-none{% endif %}">
  <div class="{% if section.settings.fw %}fw{% else %}container{% endif %}">  
    <div class="widget-inner">

      {% capture left_content %}
      {% for block in section.blocks %}     
      {% if block.settings.enable %}
      {% if block.settings.align == 'left' %}

      <div class="banner-item item-left">

        {% if block.settings.url_text != blank %}
        <a href="{{ block.settings.url }}" title="{{ block.settings.url_text }}">
          {% endif %}
          <span class="media-effect">
            {% if block.settings.item_image != blank %}
            {{ block.settings.item_image | img_url: 'master' | img_tag: block.settings.item_image.alt, '' }}
            {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}             
          </span>     

          {% if block.settings.url_text != blank %}
        </a>        
        {% endif %}

        <div class="info">
          {% if block.settings.title != blank %}
          <h3>{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.url_text != blank and block.settings.url != blank %}
          <a href="{{ block.settings.url }}" title="{{ block.settings.url_text }}">{{ block.settings.url_text }}</a>
          {% endif %}
        </div>

      </div>
      {% endif %}
      {% endif %}
      {% endfor %}
      {% endcapture %}

      {% capture right_content %}
      {% for block in section.blocks %}     
      {% if block.settings.enable %}
      {% if block.settings.align == 'right' %}

      <div class="banner-item item-right">

        {% if block.settings.url_text != blank %}
        <a href="{{ block.settings.url }}" title="{{ block.settings.url_text }}">
          {% endif %}
          <span class="media-effect">
            {% if block.settings.item_image != blank %}
            {{ block.settings.item_image | img_url: 'master' | img_tag: block.settings.item_image.alt, '' }}
            {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}             
          </span>     

          {% if block.settings.url_text != blank %}
        </a>        
        {% endif %}

        <div class="info">
          {% if block.settings.title != blank %}
          <h3>{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.url_text != blank and block.settings.url != blank %}
          <a href="{{ block.settings.url }}" title="{{ block.settings.url_text }}">{{ block.settings.url_text }}</a>
          {% endif %}
        </div>

      </div>
      {% endif %}
      {% endif %}
      {% endfor %}
      {% endcapture %}

      <div class="widget-content">
        <div class="row">       

          <div class="col-sm-6 col-6">
            {{ left_content }}
          </div>
          <div class="col-sm-6 col-6">
            {{ right_content }}
          </div>

        </div>
      </div>

    </div>
  </div>
</div>


{% schema %}
{
"name": "GRT - Banner layout 3",
"settings": [
{
"type": "checkbox",
"id": "fw",
"label": "Full width"
},
{
"type": "checkbox",
"id": "s1",
"label": "Show on Desktop",
"default": true
},
{
"type": "checkbox",
"id": "s2",
"label": "Show on Tablet",
"default": true
},
{
"type": "checkbox",
"id": "s3",
"label": "Show on Mobile",
"default": true
}
],
"blocks": [
{
"type": "text",
"name": "Item",
"settings": [
{
"type": "checkbox",
"id": "enable",
"label": "Enable item"
},
{
"type":      "radio",
"id":        "align",
"label":     "Item align",
"options": [
{ "value": "left", "label": "Left" },
{ "value": "right", "label": "Right" }
],
"default":   "left"
},
{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "url",
"id": "url",
"label": "URL"
},
{
"type": "text",
"id": "url_text",
"label": "URL - Text"
},
{
"type": "image_picker",
"id": "item_image",
"label": "Icon"
}
] 
}
],
"presets": [
{
"name": "GRT - Banner layout 3",
"category": "Image"
}
]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}