{% assign product_review = settings.use_review %}

{% assign jpreLoader = settings.jpreLoader %}
{% assign swatch = settings.swatch_color %}
{% assign enable-popupNewLetter = settings.popupNewLetter %}
{% assign enable-vendor = true %}
{% assign cart-animation = 'default' %}{% comment %}hover | click | offcanvas{% endcomment %} 
{% assign cart-position = 'hover' %}
{% assign theme-load = 'popup' %}{% comment %}popup | icon{% endcomment %} 
{% assign addcart-susscess = 'popup' %}{% comment %}popup | text | noitice{% endcomment %} 

{% assign miniCart-title = false %}
{% assign miniCart-totalPrice = false %}

{% assign collection_show_title = false %}
{% assign collection_show_des = false %}
{% assign ajaxCart = settings.product_ajaxCart %}

{% assign direction = "horizontal" %}
